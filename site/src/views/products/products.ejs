<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <main class="products">

                <div class="tit-container">
                    <h1 class="titulo">Todos nuestros productos</h1>
                </div>

                <label for="categoria">FILTRAR POR</label>
                <select name="categoria" class="categorias" id="categorias">
                <option selected hidden>Seleccione la categor√≠a</option>
                <% categorias.forEach(categorias=>{%>
                    <option value="<%= categorias.id %>" ><%= categorias.nombre %> </option>
                <% }) %>
                </select>

                

                <section class="pdtos-container" id="pdtos-container">

                    <% productos.forEach(producto => { %>
                        <article class="pdto">
                            <div class="img-container">
                                <div class="photo">
                                    <a href="/products/detail/<%= producto.id  %>"> <img
                                            src='/img/products/<%= producto.productosIm[0].nombre  %> ' width="100%"
                                            alt="<%= producto.titulo  %>" /></a>
                                </div>
                            </div>
                            <div class="description">
                                <div class="categoria">
                                    <h3 class="subt">
                                        <%= producto.nombre %>
                                    </h3>
                                    <i class="fas fa-regular fa-heart"></i>
                                </div>

                                <h2 class="subtprecio">
                                    $<%= producto.precio %>
                                </h2>
                                <p>
                                    <%= producto.descripcion %>
                                </p>
                            </div>
                        </article>
                     <% }) %>

                </section>
            </main>
            <%- include('../partials/footer.ejs') %>
    </body>
<script src="/js/productsFilter.js"></script>
</html>