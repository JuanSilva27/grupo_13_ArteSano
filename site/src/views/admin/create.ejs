<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head.ejs")  %> 
<body>
    <%- include("../partials/header.ejs") %> 

 <main class="register">
    <P class="cont.tituloRegister"><h1>Crea un producto nuevo</h1></P>
    <div class="background">
    <form class="formRegister" action="/admin/create" method="POST" enctype="multipart/form-data">
         
        <p>
            <label for="titulo">NOMBRE</label>
            <input class="tamaño" type="text" id="titulo" name="titulo" value="<%= locals.old && old.titulo ? old.titulo : null %> ">
            <% if (locals.errors && errors.nombre) { %>
                <small> <%errors.nombre.msg %> </small>
                <% } %> 
        </p>

        <p>
            <label for="precio">PRECIO</label>
            <input class="tamaño" type="number" id="precio" name="precio" value="<%= locals.old && old.precio ? old.precio : null %> ">
            <% if (locals.errors && errors.precio) { %>
                <small> <%errors.precio.msg %> </small>
                <% } %> 
        </p>
        
        <p>
        <label for="categoria">CATEGORÍA</label>
        <select name="categoria" class="tamaño">
            <option value=" " <%= locals.old && old.categoria === " " ? "selected" : null %> hidden>Seleccione la categoría</option>
            <option value="Cocina" <%= locals.old && old.categoria === "Cocina" ? "selected" : null %>> Cocina </option> 
            <option value="Baño" <%= locals.old && old.categoria === "Baño" ? "selected" : null %>> Baño </option> 
            <option value="Decoracion" <%= locals.old && old.categoria === "Decoracion" ? "selected" : null %>> Decoracion </option> 
            <option value="Juegos" <%= locals.old && old.categoria === "Juegos" ? "selected" : null %>> Juegos </option> 
        </select>
        <% if (locals.errors && errors.categoria) { %>
            <small> <%errors.categoria.msg %> </small>
            <% } %> 
        </p>

        <p>
            <label for="descripcion">DESCRIPCION</label>
            <textarea class="tamaño-desc" name="descripcion" id="descripcion" cols="30" rows="10" value="<%= locals.old && old.descripcion ? old.descripcion : null %> "></textarea>
            <% if (locals.errors && errors.descripcion) { %>
                <small> <%errors.descripcion.msg %> </small>
                <% } %> 
        </p>
        
        <p>
            <label for="image">IMAGEN</label>
            <input  type="file" id="image" name="image" value="<%= locals.old && old.image ? old.image : null %> ">
            <% if (locals.errors && errors.image) { %>
                <small> <%errors.image.msg %> </small>
                <% } %> 
        </p>

        <div class="botones">
            <button type="submit">
             Crear producto
            </button>
        </div>
    </form>
</div>
 </main>
 <%- include("../partials/footer.ejs") %> 
</body>

<script src="js/productValidate.js"> </script>

</html>