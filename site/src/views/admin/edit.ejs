<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head.ejs")  %> 
<body>
    <%- include("../partials/header.ejs") %> 

    <main class="register">
        <P class="cont.tituloRegister"><h1>Editando: <%= productEdit.titulo %> </h1></P>
        <div class="background">
        <form class="formRegister" action="/admin/edit/<%= productEdit.id %>?_method=PUT" method="POST">
             
            <p>
                <label for="titulo">NOMBRE</label>
                <input class="tamaño" type="text" id="titulo" name="titulo" value="<%= productEdit.titulo %>">
            </p>
    
            <p>
                <label for="precio">PRECIO</label>
                <input class="tamaño" type="text" id="precio" name="precio" value="<%= productEdit.precio %>">
            </p>
            
            <p>
            <label for="categoria">CATEGORÍA</label>
            <select name="categoria" class="tamaño">
                <option selected hidden>Seleccione la categoría</option>
                <% categorias.forEach(categorias=>{%>
                    <option value="<%= categorias.name %>" <%= productEdit.categoria === categorias.name ? "selected" : null %>  ><%= categorias.name %> </option>
                <% }) %>
            </select>
            </p>
    
            <p>
                <label for="descripcion">DESCRIPCION</label>
                <textarea class="tamaño-desc" name="descripcion" id="descripcion" cols="30" rows="10"><%= productEdit.descripcion %></textarea>
            </p>
            
            <p>
                <label for="imagen">IMAGEN</label>
                <input  type="file" id="imagen" name="imagen" accept="jpg">
            </p>
    
            <div class="botones">

                <button type="submit" class="guardar">Guardar</button>

            </div>
        </form>
    </div>
     </main>
 <%- include("../partials/footer.ejs") %> 
</body>
</html>