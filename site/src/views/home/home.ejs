<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head.ejs")  %> 
<body class="body-home">
    <%- include("../partials/header.ejs") %> 






    <!-- seccion home -->
    <main class="home">

        <!--  banner -->
        <section class="banner">


            <button>
                <i class="fas fa-solid fa-angle-left"></i>
            </button>

            <div class="titulo">
                <h1>La Siesta Arte</h1>
            </div>

            <button>
                <i class="fas fa-solid fa-angle-right"></i>
            </button>


        </section>


        <!-- sobre nosotras -->
        <section class="nosotras">
            <div class="tit-container">
                <h2 class="titulo">Sobre Nosotras</h2>
            </div>
            <article class="info">
                <div class="photo">
                    <img src='/img/nosotras.jpg' width="100%" alt='Nosotras' />
                </div>



                <div class="text-container">
                    <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Accusamus, ab nam sed porro aperiam
                        pariatur recusandae modi animi! Qui minus corporis facere mollitia optio aspernatur hic
                        consectetur
                        necessitatibus vitae doloribus?</p>

                    <button class="button">
                        <h4>Conocenos!</h4>
                    </button>

                </div>
            </article>
        </section>
        <!--         Termina sobre nosotras -->
        <!-- Favoritos -->
        <section class="favoritos" id="favoritos">
            <div class="tit-container">
                <h2 class="titulo">Favoritos</h3>
            </div>

            <div class="fav-container">
                <% let contador = 1 %>
                <% productos.forEach(favorito=>{%>
                    
                    <% if(favorito.favorito===true && contador<5){ %>  
                    <article class="fav-<%= contador %> ">
                        <div class="photo">
                           <a href="/products/detail/<%= favorito.id %> "> <img src='/img/<%= favorito.img %> ' width="100%" alt='<%= favorito.alt %> ' /></a>
                        </div>
                        <div class="description">
                            <div class="categoria">
                                <small><%= favorito.categoria %> </small>
                                <i class="fas fa-regular fa-heart"></i>
                            </div>
                            <h3 class="subt"><%= favorito.name %> </h3>
                            <h2 class="subt precio"><%= favorito.precio %> </h2>
                            <p><%= favorito.descipcion %></p>
                        </div>
                        
                    </article>
                    <% contador++ %>
                    <% } %> 

                <% }) %>  

            </div>
        </section>
        <!-- Termina Favoritos -->
        <!-- Categorias -->
        <section class="categorias" id="categorias">
            <div class="tit-container">
                <h2 class="titulo">Categorias</h2>
            </div>

           <article class="sec-categorias">
                <!-- <div class="img-container"> -->
                    <% categorias.forEach(categoria=>{%> 
                        <div class="img-container">
                        <img class="photo" src="/img/<%= categoria.img %> " width="100%" alt="<%= categoria.alt %> ">
                        <a href="" class="titulo"><%= categoria.name %> </a>
                        </div>
                    <% }) %> 

            </article>



        </section>
        <!-- Termina Categorias -->

        <!-- Banner Personaliza tu taza -->

        <!-- Termina Banner -->

        <section class="map-container">
            <div class="tit-container">
                <h2 class="titulo">Donde encontrarnos</h2>
            </div>
            <div class="mapa">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3021.778828121687!2d-71.62974418407576!3d-40.76688901646008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9610bffc90e4d727%3A0xe9f9c7f74ebbc0f5!2sLa%20siesta%20Arte!5e0!3m2!1ses!2sar!4v1630461257375!5m2!1ses!2sar" width="100%" height="300px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </section>

    </main>

    <!-- footer -->

    <%- include("../partials/footer.ejs") %> 
</body>

</html>
